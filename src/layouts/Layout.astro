---
import '../styles/global.css';

interface Props {
    title?: string;
}

const { title = "Energy Advisor - Smart Energy Savings" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="font-sans bg-gradient-to-br from-indigo-500 to-purple-600 min-h-screen p-5">
    <div class="max-w-7xl mx-auto bg-white rounded-2xl shadow-2xl overflow-hidden">
        <slot />
    </div>
</body>
</html>

<style>  
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
</style>